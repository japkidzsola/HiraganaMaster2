<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hiraganalearn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hiraganalearn.HiraganaLearnFragment"
    >

    <TextView
        android:id="@+id/textviewhiragana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hiragana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/toLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textviewhiragana"
            android:layout_toLeftOf="@id/ivLearn"
            android:background="@color/colorButton"
            android:text="left" />

        <ImageView
            android:id="@+id/ivLearn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/toRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textviewhiragana"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:background="@color/colorButton"
            android:text="right" />

    </LinearLayout>

</RelativeLayout>
