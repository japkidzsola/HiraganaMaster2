<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hiraganalearn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.hiraganalearn.HiraganaLearnFragment">

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play"
            android:layout_weight="0"
            />

        <TextView
            android:id="@+id/textviewhiragana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hiragana"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnfavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite_border_black"
            android:layout_weight="0"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="100"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivLearn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/textviewname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLearn"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:drawableStart="@drawable/ic_left"
            android:drawableLeft="@drawable/ic_left"
            tools:ignore="NestedWeights" />


        <Button
            android:id="@+id/toRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:drawableEnd="@drawable/ic_right"
            android:drawableRight="@drawable/ic_right" />

    </LinearLayout>

</LinearLayout>
